<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Medflix.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Medflix.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Medflix.Windows.MainWindow"
        Icon="/Assets/medflix.ico"
		WindowState="Maximized"
        Title="Medflix">
	<Panel x:Name="MainWindowContainer" Background="Black">
		<views:MainAppView x:Name="MainAppView"/>
		<Panel x:Name="SplashScreen" Background="Black" IsVisible="True">
			<Image Width="300" Source="/Assets/logo.png"/>
		</Panel>
	</Panel>
</Window>
