<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Style Selector="Button.modalBtn">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="Cursor" Value="Hand"/>
		<Setter Property="Margin" Value="5 7 5 15"/>
	</Style>

	<Style Selector="Button.modalBtn Border">
		<Setter Property="CornerRadius" Value="7"/>
	</Style>
	
	<Style Selector="Button.modalBtn TextBlock">
		<Setter Property="FontSize" Value="22"/>
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="Padding" Value="7 5 7 5"/>
		<Setter Property="Width" Value="80"/>
		<Setter Property="TextAlignment" Value="Center"/>
	</Style>
	
	<Style Selector="Button.modalBtn.red Border">
		<Setter Property="Background" Value="#f20e0e"/>
	</Style>
	<Style Selector="Button.modalBtn.red:pointerover Border">
		<Setter Property="Background" Value="#a40000"/>
	</Style>

	<Style Selector="Button.modalBtn.gray Border">
		<Setter Property="Background" Value="#5a5a5e"/>
	</Style>
	<Style Selector="Button.modalBtn.gray:pointerover Border">
		<Setter Property="Background" Value="#474749"/>
	</Style>
</Styles>
