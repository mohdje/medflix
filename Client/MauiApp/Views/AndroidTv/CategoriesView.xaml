<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Medflix.Views.AndroidTv.CategoriesView"
             Loaded="OnLoaded">

    <Grid>
        <ActivityIndicator x:Name="LoadingSpinner" Color="White" IsRunning="True" HeightRequest="100" WidthRequest="100"/>
        <VerticalStackLayout x:Name="Categories" IsVisible="False">
            <Label 
                Grid.Row="0"
                Text="Platforms"
                TextColor="White"
                FontSize="20"
                FontAttributes="Bold"
                />
            <FlexLayout x:Name="Platforms" Margin="0,20,0,40" Wrap="Wrap"/>

            <Label 
                Grid.Row="2"
                Text="Genres"
                TextColor="White"
                FontSize="20"
                FontAttributes="Bold"/>
            <FlexLayout x:Name="Genres" Margin="0,20,0,20" Wrap="Wrap"/>
        </VerticalStackLayout>
    </Grid>
      


</ContentView>
